#!/usr/bin/env bash
set -eo pipefail
[[ $DOKKU_TRACE ]] && set -x


declare APP="$1" INTERNAL_PORT="$2" INTERNAL_IP_ADDRESS="$3" IMAGE_TAG="$4"

echo "Post Deploy Test!"
echo $INTERNAL_IP_ADDRESS
echo $INTERNAL_PORT
echo $IMAGE_TAG
echo $APP
pwd

NEW_INTERNAL_IP=$(cat /home/dokku/$APP/nginx.conf | grep "server .*5000" | awk '$1 == "server" {print $2}' | cut -f1 -d":")
echo $NEW_INTERNAL_IP